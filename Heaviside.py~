def H(x):
    if x < 0.0:
        H = 0
    else:
        H = 1
    return H

def test_H():
    print 'H(-10) should be 0, and is ' %H(-10)
    print 'H(-10**(-15)) should be 0, and is ' %H(-10**(-15))
    print 'H(0) should be 1, and is ' %H(0)
    print 'H(10**(-15)) should be 1, and is ' %H(10**(-15))
    print 'H(10) should be 1, and is ' %H(10)

test_H()



    
    
